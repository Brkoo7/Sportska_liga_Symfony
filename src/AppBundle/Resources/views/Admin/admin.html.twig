{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div id="wrapper">
        <!-- Glavna navigacija -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Za manje ekrane -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="admin-header">
                    <div>
                        <a href="{{path('AppBundle_League_homePage')}}">
                            <img id="logo" src="{{asset('images/sleague.png') }}" height="43px" width="50px" />
                        </a>
                    </div>
                </div>
            </div>

            <!-- Botun ta login i drop-down opcije -->
            <ul class="nav navbar-right top-nav" style="margin-right: 15px; position: relative; top: 0px ">       
                <li class="dropdown" >
                <!-- Ako je korisnik potpuno autentificiran prikaži njegov email -->
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        
                        <a href="#" class="dropdown-toggle"  data-toggle="dropdown"><i class="fa fa-user"></i>
                        {{ app.user.username }}
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('logout') }}"><i class="fa fa-fw fa-power-off"></i> Odjavi se</a>
                            </li>
                        </ul>

                    <!-- Ako korisnik nije autentificiran prikaži botun za prijavu -->
                        {% else %}
                            <a href="{{ path('AppBundle_Security_login') }}" ><i class="fa fa-fw fa-user"></i>Prijavi se</a>
                    {% endif %}
                </li>
            </ul>

            <!-- Sidebar - sa lijeve strane navigacija - fiksirana -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="{{path('AppBundle_Admin_adminPage')}}"> 
                            <i class="fa fa-tachometer fa-2x" aria-hidden="true"></i>
                            <span class="title">SUČELJE</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{path('AppBundle_Admin_adminTeams')}}"> 
                            <i class="fa fa-tasks fa-2x" aria-hidden="true"></i>
                            <span class="title">EKIPE</span>    
                        </a>
                    </li>
                    <li>
                        <a href="{{path('AppBundle_Admin_adminSchedules')}}"> 
                            <i class="fa fa-calendar fa-2x" aria-hidden="true"></i>
                            <span class="title">RASPORED</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{path('AppBundle_Admin_adminResults')}}">
                            <i class="fa fa-futbol-o fa-2x" aria-hidden="true"></i>
                            <span class="title">REZULTATI</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main>
            {% block content %}
            <div id="page-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <h1>Dobrodošli</h1>
                        
                        <h4>Upute za korištenje administratorskog sučelja</h3>
                        <main style="margin-top: 30px;">
                            <h4 style="color:#222222;">Klubovi</h4>
                            <p>
                                Sustav omogućava vrlo lagano dodavanje, editiranje i brisanje timova.
                            </p>
                            <h4 style="color:#222222;">Raspored lige</h4>
                            <p>
                                Sustav omogućava vrlo lagano dodavanje, editiranje i brisanje rasporeda utakmica.
                            </p>
                            <h4 style="color:#222222;">Rezultati lige</h4>
                            <p>
                                Web aplikacija je implementirana na način da se rezultat lige dodaje iz rasporeda pa tako ukoliko želimo unijeti rezultat utakmice ona mora biti u rasporedu lige. Također kada izbrišemo rezultat utakmice, ona ostaje u rasporedu.
                            </p>
                        </main>
                    <div>
                </div>
            </div> 
            {% endblock content %}       
        </main>
{% endblock %}



    

