{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    
    

    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">    <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">Prijava</div>
                </div>     
                {% if error %}
                    <div style="color: blue; padding: 20px 0px 0px 20px;">Pogrešni podaci za prijavu</div>
                {% endif %}

                <div style="padding-top:30px" class="panel-body" >

                    <form id="loginform" class="form-horizontal" role="form" 
                    action="{{ path('AppBundle_Security_login') }}" method="post" >
                        <div class="input-group">
                            <input id="username" type="text" class="form-control" name="_username" 
                            value="{{ last_username }}" placeholder="email adresa">
                        </div> 
                        <div class="input-group" style="margin-top: 20px;">
                            <input id="password" type="password" class="form-control" name="_password" placeholder="lozinka">
                        </div>        
                        
                        <div class="form-group" style="margin-top: 20px;">
                            <div class="col-md-6">
                                <input type="submit" value="Prijavi se" />
                            </div>
                        </div>
                    </form>     
               
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                Nemaš još račun???
                                <a href="{{ path('AppBundle_Security_registration') }}">
                                    Registriraj se ovdje
                                </a>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>  
        </div>   
    </div>
 
{% endblock content %}